<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD com.Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.class1.boot.dao.mappers.DiscussPostMapper">
    <sql id="discussPostAllColumn">
        id,user_id,title,content,type,status,create_time,score,comment_count
    </sql>
    <sql id="insertPost">
        user_id,title,content,type,status,create_time,score,comment_count
    </sql>
    <insert id="insertDiscussPost" parameterType="DiscussPost" keyProperty="id">
        insert into discuss_post(<include refid="insertPost"></include>)
        values(#{userId},#{title},#{content},#{type},#{status},#{createTime},#{score})
    </insert>
    <update id="updateCommentCount">
        update discuss_post set comment_count = #{commentCount} where id = #{id}
    </update>

    <select id="getAllDiscussPost" resultType="map">
        select <include refid="discussPostAllColumn"></include>
        from discuss_post
        where status != 2
        <if test="userId!=0">
            and user_id = #{userId}
        </if>
        order by type desc,create_time desc
    </select>
    <select id="getDiscussPostById" resultType="com.class1.boot.pojo.DiscussPost">
        select<include refid="discussPostAllColumn"></include>
        from discuss_post
        where id = #{id}
    </select>
    <select id="getDiscussPosts" resultType="com.class1.boot.pojo.DiscussPost">
        select <include refid="discussPostAllColumn"></include>
        from discuss_post
    </select>
</mapper>