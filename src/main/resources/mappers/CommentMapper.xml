<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD com.Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.class1.boot.dao.mappers.CommentMapper">
    <sql id="selectColumn">
        id,user_id,entity_type,entity_id,target_id,status,create_time,content
    </sql>
    <sql id="insertColumn">
        user_id,entity_type,entity_id,target_id,status,create_time,content
    </sql>

    <insert id="insertComment" parameterType="Comment" keyProperty="id">
        insert into comment(<include refid="insertColumn"/>)
        values(#{userId},#{entityType},#{entityId},#{targetId},#{status},#{createTime},#{content})
    </insert>

    <select id="getAllComment" resultType="map">
        select <include refid="selectColumn"/>
        from comment
        where status = 0
        and entity_type = 1
        and entity_id = #{entityId}
        order by create_time asc
    </select>
    <select id="getCommentCount" resultType="java.lang.Integer">
        select count(id)
        from comment
        where status = 0
        and entity_type = 1
        and entity_id = #{entityId}
    </select>
    <select id="getAllReply" resultType="com.class1.boot.pojo.Comment">
        select <include refid="selectColumn"/>
        from comment
        where status = 0
        and entity_type = 2
        and entity_id = #{entityId}
        order by create_time asc
    </select>
    <select id="getReplyCount" resultType="java.lang.Integer">
        select count(id)
        from comment
        where status = 0
        and entity_type = 2
        and entity_id = #{entityId}
    </select>
</mapper>